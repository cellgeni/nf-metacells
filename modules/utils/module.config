process {
    if ( params.raw ) {
        withName: "TO_H5AD" {
            queue      = 'normal'
            cpus       = 4
            memory     = { 16.GB + 32.GB * (task.attempt - 1) }
            container  = 'docker://quay.io/cellgeni/metacells-python:latest'
            publishDir = [
                mode     : params.publish_mode,
                path     : "${params.output_dir}/adata",
                overwrite: true
            ]
        }
        withName: "ATTACH_CELL_METADATA" {
            debug      = true
            queue      = 'normal'
            cpus       = 4
            memory     = { 16.GB + 32.GB * (task.attempt - 1) }
            container  = 'docker://quay.io/cellgeni/metacells-python:latest'
            publishDir = [
                mode     : params.publish_mode,
                path     : "${params.output_dir}/adata",
                overwrite: true
            ]
        }
    }
}
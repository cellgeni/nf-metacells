process {
    if ( params.seacells.enabled ) {
        withName: "SEACellsAggregate" {
            queue      = 'normal'
            cpus       = 16
            memory     = { 32.GB + 64.GB * (task.attempt - 1) }
            container  = 'docker://quay.io/cellgeni/seacells:latest'
            publishDir = [
                mode     : params.publish_mode,
                path     : params.output_dir,
                overwrite: true
            ]
        }
    }
}